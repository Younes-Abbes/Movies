@model WebApplication1.Models.ViewModels.LoginViewModel
@{
}


<h3 class="text-xl font-bold mb-4">Login</h3>

<div class="flex justify-center">
    <div class="w-full max-w-sm">
        <form method="post" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <div class="mb-4">
                <label asp-for="Username" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Username" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="mb-6">
                <label asp-for="Password" class="block text-gray-700 text-sm font-bold mb-2"></label>
                <input asp-for="Password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" type="password" />
                <span asp-validation-for="Password" class="text-red-500 text-xs italic"></span>
            </div>
            <div class="flex items-center justify-between">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Login</button>
            </div>
        </form>
    </div>
</div>
