@model IEnumerable<Genre>
@{
}

<h1 class="text-2xl text-red-500 mb-4">Genres</h1>

<div class="mb-4">
    <a asp-area="" asp-controller="genres" asp-action="add" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors duration-300">Add Genre</a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    @foreach (var genre in Model)
    {
        <div class="p-4 border rounded shadow hover:shadow-lg transition-shadow duration-300">
            <h2 class="text-xl font-semibold">@genre.GenreName</h2>
        </div>
    }
</div>
