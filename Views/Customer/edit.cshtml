@model WebApplication1.Models.ViewModels.EditCustomerRequest

<form asp-action="edit" asp-controller="Customer" method="post">
    <div>
        <label for="DiscountRate">Id</label>
        <input type="text" readonly id="DiscountRate" name="DiscountRate" value="@Model.Id">
    </div>
    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" value="@Model.Name">
    </div>
    <button type="submit">Submit</button>
</form>
